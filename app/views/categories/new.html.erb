<div>
  <% @title = "New Categories" %>
  <%= render "shared/header", locals: { title: @title }, back: true %>

  <%= form_with model: @group, class:"pt-12" , url: categories_path do |form| %>
    <div class="flex justify-center w-full">
          <div class="flex flex-col w-[90%] p-5 border max-w-wrapper">
            <%= form.text_field :name, required: true, placeholder: "Enter New Category", class: 'px-5 py-2 border-b w-[90%] mx-auto block outline-none text-[20px] mb-5 '%>
            <%= form.select :icon, options_for_select(@options, selected: @group.icon), { prompt: "Select an icon" }, class: "text-center w-[90%] mx-auto text-2xl" %>
          </div>
    </div>
    <%= form.submit "Create category", class: 'bg-secondary  fixed bottom-0 border border-white text-center px-7 text-white py-3 w-full uppercase'%>
  <% end %>
</div>
