<div>
  <% @title = "New Transaction" %>
  <%= render "shared/header", locals: { title: @title }, back: true %>

  <%= form_with model: @entity, url: category_transactions_path(@category) do |form| %>
    <div class="flex justify-center w-full py-12">
          <div class="flex flex-col w-[90%] p-5 border max-w-wrapper">
            <%= form.text_field :name, required: true, placeholder: "Enter New Transaction Name", class: 'px-5 py-2 border-b w-[90%] mx-auto block outline-none text-[20px] mb-5 '%>
            <%= form.number_field :amount, required: true, placeholder: "Amount (USD)", class: 'px-5 py-2 border-b w-[90%] mx-auto block outline-none text-[20px] '%>
          </div>
    </div>
    <%= form.submit "Create category", class: 'bg-secondary fixed bottom-0 border border-white text-center px-7 text-white py-3 w-full uppercase'%>
  <% end %>
</div>
